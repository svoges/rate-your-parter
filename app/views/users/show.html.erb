<div class="container">
<h3><%= @user.name %></h3>
<p><%= @user.email if @user.email %></p>
<p>Average rating given: <b><%= @average_given_rating %> </b></p>
<br/>
<table class="table table-hover">
<tr>
<th>Description</th>
<th>Rating</th>
<th>Reviewer</th>
</tr>
<% @user.received_reviews.each do |review| %>
<tr>
<td><%= review.description %></td>
<td><%= review.rating.to_s %></td>
<td><%= link_to review.reviewer.name, users_path + "/" + review.reviewer.id.to_s %></td>
</tr>
<% end %>
</table>
</div>